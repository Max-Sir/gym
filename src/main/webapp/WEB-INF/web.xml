<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Old school gym.</display-name>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.epam.gym.servlet.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <filter>
        <description>Encoding parameter to UTF-8</description>
        <filter-name>UTF8</filter-name>
        <filter-class>by.epam.gym.filters.UTF8Filter</filter-class>
        <init-param>
            <param-name>type</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UTF8</filter-name>
        <url-pattern>/*</url-pattern>
</filter-mapping>
</web-app>
